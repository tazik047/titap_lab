@model List<SelectListItem>

@{
	ViewBag.Title = "ПР - Шаг1";
}

@using (Html.BeginForm())
{
	<div class="form-horizontal">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })

		<div class="form-group">
			<label class="control-label col-md-2">ЛПР</label>
			<div class="col-md-10">
				@SelectExtensions.DropDownList(Html, "lprId", ViewBag.Lprs, new { @class = "form-control" })
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-md-2">Критерии для выбора</label>
			<div class="col-md-10">
				@Html.ListBox("criterions", Model, new {@class = "form-control", style=$"height:{Model.Count * 20}px;" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Дальше" class="btn btn-default" />
			</div>
		</div>
	</div>
}